
@model DeluxeModel.product

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>



<div class="">
    @using (Html.BeginForm("Update", "ThirdParty", FormMethod.Post))
    {



    }
    <form>
        <div class="form-group row">
            <label for="first_name" class="col-xs-3 col-form-label mr-2">Product Name</label>
            <div class="col">
                <input type="text" class="form-control" id="first_name" name="first_name" value="@Model.prd_name">
            </div>
        </div>
        <div class="form-group row">
            <label for="last_name" class="col-xs-3 col-form-label mr-2">Product Quantity</label>
            <div class="col">
                <input type="text" class="form-control" id="last_name" name="last_name" value="@Model.prd_quantity">
            </div>
        </div>

        <div class="form-group row">
            <label for="last_name" class="col-xs-3 col-form-label mr-2">Product Price</label>
            <div class="col">
                <input type="text" class="form-control" id="last_name" name="last_name" value="@Model.price">
            </div>
        </div>



        <div class="form-group row">
            <label for="last_name" class="col-xs-3 col-form-label mr-2">Product Description</label>
            <div class="col">
                <textarea class="form-control">@Model.prd_desc</textarea>

            </div>
        </div>


        <div class="form-group row">
            <label for="last_name" class="col-xs-3 col-form-label mr-2">Product Image</label>
            <div class="col">
                <img src="~/App_File/Images/@Model.prd_img" height="100" width="100" />
                <input type="file" accept="image/*" />
            </div>
        </div>



        <div class="form-group row">
            <div class="offset-xs-3 col-xs-9">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
    </form>
</div>

