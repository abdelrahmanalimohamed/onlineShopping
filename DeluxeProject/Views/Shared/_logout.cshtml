    <style type="text/css">
        html,
        body,
        header,
        .carousel {
            height: 60vh;
        }

        .modal-backdrop {
            opacity: 0.5 !important;
        }

        @@media (max-width: 740px) {

            html,
            body,
            header,
            .carousel {
                height: 100vh;
            }
        }

        @@media (min-width: 800px) and (max-width: 850px) {

            html,
            body,
            header,
